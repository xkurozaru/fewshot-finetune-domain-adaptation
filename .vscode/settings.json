{
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "black-formatter.args": [
        "--line-length=200",
    ],
    "flake8.args": [
        "--max-line-length=200",
        "--ignore=E203,W503,W504"
    ],
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "off",
}
